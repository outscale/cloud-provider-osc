{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "api:ReadVms",
        "api:ReadLoadBalancers",
        "api:CreateLoadBalancer",
        "api:UpdateLoadBalancer",
        "api:CreateLoadBalancerListeners",
        "api:DeleteLoadBalancer",
        "api:DeleteLoadBalancerListeners",
        "api:RegisterVmsInLoadBalancer",
        "api:DeregisterVmsInLoadBalancer",
        "api:ReadPublicIps",
        "api:ReadSecurityGroups",
        "api:CreateSecurityGroup",
        "api:DeleteSecurityGroup",
        "api:CreateSecurityGroupRule",
        "api:DeleteSecurityGroupRule",
        "api:ReadSubnets",
        "api:CreateTags",
        "elasticloadbalancing:DescribeLoadBalancers",
        "elasticloadbalancing:CreateLoadBalancerPolicy",
        "elasticloadbalancing:SetLoadBalancerPoliciesForBackendServer",
        "elasticloadbalancing:DescribeLoadBalancerAttributes",
        "elasticloadbalancing:ModifyLoadBalancerAttributes"
      ],
      "Resource": "*"
    }
  ]
}
